<Window x:Class="TMS.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TMS.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- -Column definitions- -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!-- Header -->
        <TextBlock Text="T M S"
           VerticalAlignment="Center"
           HorizontalAlignment="Left"
           Foreground="Black"
           FontSize="25" Margin="44,0,0,0"/>
        <!-- Navigation Bar -->
        <StackPanel Grid.Column="0" Grid.RowSpan="2" VerticalAlignment="Center" Height="317">
            <Button Content="Home"
                    Height ="50"
                    Margin="5"/>
            <Button Content="Orders"
                    Height="50"
                    Margin="5"/>
            <Button Content="Carriers"
                    Height="50"
                    Margin="5"/>
            <Button Content="Billing"
                    Height="50"
                    Margin="5"/>
            <Button Content="Admin Settings"
                    Height="50"
                    Margin="5"/>
        </StackPanel>
        <!---Border separating the main content area to that of buttons -->
        <Border Grid.Column="2" Grid.RowSpan="2" BorderBrush="Blue" BorderThickness="2"/>
        <!-- Main Content Area -->
        <ContentControl Grid.Column="1" Grid.Row="1" Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
